<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-black">
    <h1>Our ponies</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <% @ponies.each_slice(3) do |pony_group| %>
        <div class="card-group mb-4">
          <% pony_group.each do |pony| %>
            <div class="card">
              <%= cl_image_tag(pony.photos.first.key, class: "card-img-top", alt: "#{pony.name} Image") %>
              <div class="card-body">
                <h5 class="card-title"><%= pony.name %></h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <p class="card-text"><%= pony.price_per_day %></p>
                <%= link_to "More info", pony_path(pony), class: "btn btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= image_tag("https://upload.wikimedia.org/wikipedia/commons/7/72/Carte_France.png", class: "img-fluid", alt: "Map of France") %>
        </div>
      </div>
    </div>
  </div>
</div>
