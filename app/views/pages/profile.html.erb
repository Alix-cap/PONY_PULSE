<div class="container">

  <div class="row">
    <div class="col-12 my-4">
      <h1>Welcome to your profile!</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-7">
      <div class="cards-ponies">
        <h2 class="text-center">Your ponies: </h2>
        <% @ponies.each do |pony| %>
            <div class="card">
              <%= cl_image_tag(pony.photos.first.key, class: "img-rounded", alt: "#{pony.name} Image") %>
              <div class="card-body">
                <h5 class="card-title"> <b><%= pony.name %></b></h5>
                <p class="card-text"><%= pony.purpose %></p>
                <p class="card-text"><%= pony.price_per_day %> <i class="fa-solid fa-dollar-sign"></i></p>
                <%= link_to "Delete", pony_path(pony), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this pony?"}, class:"btn btn-primary"%>
              </div>
            </div>
        <% end %>
      </div>
    </div>
    <div class="col-5">

      <div class="cards-bookings">
          <h2 class="text-center">Your future bookings: </h2>
          <% @user.bookings.each do |booking| %>
          <div class="card-product my-1">
              <%= cl_image_tag(booking.pony.photos.first.key, class: "card-img-top", alt: "#{booking.pony.name} Image") %>
            <div class="card-product-infos">
              <h2>With <%= booking.pony.name%></h2>
              <p>From: <%= booking.start_date %></p>
              <p>To: <%= booking.end_date %></p>

            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <div class="cards-bookings">
        <h2>Bookings to validate : </h2>
        <% @bookings_to_validate.each do |booking| %>
          <div class="card">
              <p>start date: <%= booking.start_date %></p>
              <p>start date: <%= booking.end_date %></p>
              <p>status: <%= booking.status %></p>
              <p>pony: <%= booking.pony.name%></p>
              <%= link_to "Accept",
                accept_booking_path(booking),
                data: {turbo_method: :patch, turbo_confirm: "Are you sure you want to accept this booking ?"}
              %>
              <%= link_to "Decline",
                decline_booking_path(booking),
                data: {turbo_method: :patch, turbo_confirm: "Are you sure you want to refuse this booking ?"}
              %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
